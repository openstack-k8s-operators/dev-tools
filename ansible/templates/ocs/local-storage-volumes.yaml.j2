apiVersion: local.storage.openshift.io/v1
kind: LocalVolume
metadata:
  name: local-disks
  namespace: local-storage
spec:
  logLevel: Normal
  managementState: Managed
  nodeSelector:
    nodeSelectorTerms:
      - matchExpressions:
          - key: cluster.ocs.openshift.io/openshift-storage
            operator: In
            values:
              - '' 
  storageClassDevices:
  - devicePaths:
    - /dev/vdb
    - /dev/vdc
    - /dev/vdd
    storageClassName: localblock-sc
    volumeMode: Block
